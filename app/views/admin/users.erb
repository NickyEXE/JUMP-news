<%= render 'authenticate' %>
<%= link_to 'Articles Admin Dashboard', admin_articles_path, class: 'admin-link' %>

<h1>Users Admin Dashboard</h1>

<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Admin?</th>
    </tr>
<% @users.each do |user| %>
    <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td>
            <% if user.admin %>
                Yes
            <% else %>
                No
            <% end %>
        </td>
    </tr>

<% end %>