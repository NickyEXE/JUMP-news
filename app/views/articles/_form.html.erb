<%= form_with model: @article, id: 'article-form', local: true do |form| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <div class="explanation">"Self-Explanatory. Make it Clickable." </div>
  </div>
  
  <div class="field">
    <%= form.label :byline %>
    <%= form.text_field :byline %>
    <div class="explanation">The author of the article.</div>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
    <div class="explanation">The actual article. This should be written in full-ass HTML to work correctly.</div>
  </div>
  
  <div class="field">
    <%= form.label :blurb %>
    <%= form.text_area :blurb %>
    <div class="explanation">A short summary of the article. Again: Make it clickworthy.</div>
  </div>

  <div class="field">
    <%= form.label :stub %>
    <%= form.text_field :stub %>
    <div class="explanation">How the article appears in the URL. Something like 'man-barks-at-dog'.</div>
  </div>

  <div class="thumbnail">
    <%= form.label :thumbnail %>
    <%= form.text_field :thumbnail %>
    <div class="explanation">URL of the article's thumbnail image. This is what will appear on the masthead.</div>
  </div>
  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>